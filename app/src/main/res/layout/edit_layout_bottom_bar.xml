<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_rg_bottom_container"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:orientation="horizontal"
    android:paddingTop="6dp">


    <LinearLayout
        android:id="@+id/tab_item_trash"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_trash"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:selectAllOnFocus="true"
            android:src="@drawable/tab_item_trash" />

        <TextView
            android:id="@+id/tv_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:text="Hairstyles"
            android:textColor="@color/tab_item_color"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tab_item_swipe_clean"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_swipe_clean"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:selectAllOnFocus="true"
            android:src="@drawable/tab_item_swipe_clean" />

        <TextView
            android:id="@+id/tv_swipe_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:text="Glasses"
            android:textColor="@color/tab_item_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_item_settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_settings"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:selectAllOnFocus="true"
            android:src="@drawable/tab_item_settings" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:text="Frames"
            android:textColor="@color/tab_item_color"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>