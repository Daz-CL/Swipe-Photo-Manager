<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_rg_bottom_container"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_layout_frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ad_container"
            android:clipToPadding="true" />

        <FrameLayout
            android:id="@+id/ad_container"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/main_rg_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:clipChildren="false"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/tab_item_trash"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/view_trash"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:selectAllOnFocus="true"
                    android:src="@drawable/tab_item_trash" />

                <TextView
                    android:id="@+id/tv_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:text="Trash"
                    android:textColor="@color/tab_item_color1"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_count_trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/view_trash"
                android:layout_marginStart="-12dp"
                android:layout_toEndOf="@+id/view_trash"
                android:background="@drawable/shape_trash_count_bg"
                android:gravity="center|center_vertical"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:visibility="invisible"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/tab_item_swipe_clean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_swipe_clean"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:selectAllOnFocus="true"
                android:src="@drawable/tab_item_swipe_clean" />

            <TextView
                android:id="@+id/tv_swipe_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:text="Swipe"
                android:textColor="@color/tab_item_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_item_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:selectAllOnFocus="true"
                android:src="@drawable/tab_item_settings" />

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:text="Setting"
                android:textColor="@color/tab_item_color"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>